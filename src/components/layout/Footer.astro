---
import Icon from "../ui/Icon.astro";

const navLinks = [
  { href: "#inicio", text: "Inicio" },
  { href: "#servicios", text: "Servicios" },
  { href: "#faq", text: "Preguntas Frecuentes" },
  { href: "#contacto", text: "Contacto" },
];

// Enlaces reales
const socialLinks = [
    { href: "https://wa.me/573137510875", name: "whatsapp", label: "WhatsApp" },
    // Si tienes Instagram, descomenta la siguiente línea y pon tu usuario
    // { href: "https://instagram.com/TU_USUARIO", name: "instagram", label: "Instagram" },
]
---

<footer class="bg-text-primary text-white pt-16 pb-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 text-center md:text-left">
      
      <!-- Brand -->
      <div>
        <img src="/images/logo.png" alt="Electrofix" class="h-12 w-auto mb-6 mx-auto md:mx-0 bg-white p-2 rounded-lg" />
        <p class="text-gray-400 leading-relaxed">
          Expertos en reparación de neveras, lavadoras y electrodomésticos en Medellín y alrededores. Calidad garantizada y repuestos originales.
        </p>
        <div class="flex justify-center md:justify-start space-x-4 mt-6">
            {socialLinks.map(social => (
                <a href={social.href} target="_blank" rel="noopener noreferrer" aria-label={social.label} class="bg-gray-800 p-2 rounded-full hover:bg-primary hover:text-white transition-all duration-300">
                    <Icon name={social.name} className="w-5 h-5" />
                </a>
            ))}
        </div>
      </div>
      
      <!-- Links -->
      <div>
        <h4 class="font-bold text-lg mb-6 text-white border-b border-gray-700 pb-2 inline-block">Enlaces Rápidos</h4>
        <ul class="space-y-3">
          {navLinks.map(link => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-primary transition-colors flex items-center justify-center md:justify-start gap-2">
                <span class="text-primary text-xs">➤</span> {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contacto Directo -->
      <div>
        <h4 class="font-bold text-lg mb-6 text-white border-b border-gray-700 pb-2 inline-block">Contáctanos</h4>
        <ul class="space-y-4 text-gray-400">
            <li class="flex flex-col items-center md:items-start">
                <span class="text-sm text-gray-500 font-semibold uppercase tracking-wider mb-1">Teléfono / WhatsApp</span>
                <a href="https://wa.me/573137510875" class="text-white text-lg font-bold hover:text-success transition-colors">
                    +57 313 751 0875
                </a>
            </li>
            <li class="flex flex-col items-center md:items-start">
                <span class="text-sm text-gray-500 font-semibold uppercase tracking-wider mb-1">Horario de Atención</span>
                <span>Lunes a Sábado: 8:00 AM - 6:00 PM</span>
            </li>
             <li class="flex flex-col items-center md:items-start">
                <span class="text-sm text-gray-500 font-semibold uppercase tracking-wider mb-1">Cobertura</span>
                <span>Medellín, Envigado, Sabaneta, Bello, Itagüí.</span>
            </li>
        </ul>
      </div>
    </div>
    
    <div class="border-t border-gray-800 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center text-gray-500 text-sm">
      <p>&copy; {new Date().getFullYear()} Electrofix. Todos los derechos reservados.</p>
      <div class="flex gap-4 mt-4 md:mt-0">
         <a href="/privacidad" class="hover:text-white transition-colors">Política de Privacidad</a>
      </div>
    </div>
  </div>
</footer>