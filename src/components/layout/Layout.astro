---
import "../../styles/global.css";
import Header from "./Header.astro";
import Footer from "./Footer.astro";

interface Props {
	title: string;
    description?: string;
}

const { 
    title, 
    description = "Reparación de electrodomésticos en Medellín. Expertos en neveras, lavadoras y nevecones. Servicio técnico a domicilio con garantía. ¡Llámanos ya!" 
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
        <!-- Usamos el logo como icono -->
		<link rel="icon" type="image/jpg" href="/images/logo_tab.jpg" /> 
		<meta name="generator" content={Astro.generator} />
        
        <!-- SEO Principal -->
		<title>{title}</title>
        <meta name="description" content={description} />
        <meta name="keywords" content="reparación neveras medellin, arreglo lavadoras, servicio tecnico lg, samsung, whirlpool, tecnico electrodomesticos, mantenimiento neveras" />
        <meta name="author" content="Electrofix" />
        
        <!-- Open Graph / Facebook / WhatsApp Preview -->
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <!-- Asegúrate de tener esta imagen, o usa el logo como fallback -->
        <meta property="og:image" content="/images/logo.jpg" /> 

        <!-- Google Fonts (Tipografía profesional Inter) -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
	</head>
	<body class="font-sans text-text-primary bg-background">
        <Header />
		<main>
			<slot />
		</main>
        <Footer />
        
        <!-- Script para animaciones al hacer scroll -->
        <script>
            const reveals = document.querySelectorAll('.reveal');
            
            const revealOnScroll = () => {
                const windowHeight = window.innerHeight;
                const elementVisible = 100;
            
                reveals.forEach((reveal) => {
                    const elementTop = reveal.getBoundingClientRect().top;
                    if (elementTop < windowHeight - elementVisible) {
                        reveal.classList.add('active');
                    }
                });
            };
            
            window.addEventListener('scroll', revealOnScroll);
            // Disparar una vez al inicio para elementos que ya están visibles
            revealOnScroll();
        </script>
	</body>
</html>